

{{!-- la propiedad name llevar√° el mismo nombre de la propiedad de nuestro modelo
para atacar y dar valor a ese campo  --}}

<div class="card card-body p-4 rounded-0  card_custom">

    <h3>Add A Task</h3>

    <form action="/new-task" method="post">


        {{! Title Input }}
        <div class="mb-3">
            <label for="titulo">Write a title:</label>
            <input id="titulo" class="form-control rounded-0" type="text" name="titulo" placeholder="Title"
                autofocus />
        </div>

        {{! Description Input }}
        <div class="mb-3">
            <label for="descripcion">Description</label>
            <textarea id="descripcion" class="form-control rounded-0   text_area_custom" name="descripcion" cols="80"
                placeholder="Add a Description"></textarea>
        </div>


        <div class="text-end">
            <button class="btn btn-success" type="submit"><i class="fas fa-plus"></i></button>

        </div>

    </form>

</div>