

{{#if lista_tareas}}

  <table class="table table-bordered table-hover table-dark">
      
    <thead class="text-center">
      <tr>
        <th>NÂ°</th>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

      {{#each lista_tareas}}

        <tr>
          <td>{{@index}}</td>

          <td><strong>{{titulo}}</strong></td>

          <td>{{descripcion}}</td>


          <td class="text-center">

            {{#if tarea_realizada}}

              <a
                class="btn btn-outline-success"
                href="/task-done/{{_id}}"
              ><i class="fas fa-check"></i> Done</a>

            {{else}}

              <a class="btn btn-outline-danger" href="/task-done/{{_id}}">
                <i class="fas fa-times"></i> Undone
              </a>

            {{/if}}

            <a href="/delete-task/{{_id}}" class="btn btn-danger">
              Delete
            </a>

            <a href="/edit-task/{{_id}}" class="btn btn-warning">
              Edit
            </a>


          </td>
        </tr>

      {{/each}}

    </tbody>
  </table>

{{else}}


  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">

      <h1>No tasks</h1>
      
      <img src="/icons/empty.svg" class="w-75" />

    </div>

  </div>


{{/if}}